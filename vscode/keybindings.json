  // CENTER ON UP / DOWN
  {
    "key": "ctrl+d",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal'",
    "args": {
      "after": ["<C-d>", "z", "z"]
    }
  },
  {
    "key": "ctrl+u",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal'",
